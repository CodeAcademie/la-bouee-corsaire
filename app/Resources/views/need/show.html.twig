{% extends 'base.html.twig' %}

{% block title %}{{ need.title }}{% endblock %}

{% block body %}
	<h1>{{ block('title') }}</h1>
	<h2>Lieu</h2>
	<p>{{ need.location }}</p>
	<h2>Durée estimée</h2>
	<p>{{ need.hours }} heures</p>
	<h2>Description</h2>
	<p>{{ need.description }}</p>

	{% if need.user == user %}
		<p><a class='btn btn-default' href='/user/need/edit/{{ need.id }}'>
			Éditer ce Besoin
		</a></p>
	{% else %}
		<p><a class='btn btn-default' href='/user/message/new/{{ need.id }}'>
			Se proposer pour remplir ce Besoin
		</a></p>
	{% endif %}

	<p><a class='btn btn-default' href='/need/list'>Retour à la liste des Besoins</a></p>
{% endblock %}

