<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{% block title %}La Bou√©e Corsaire{% endblock %}</title>
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		<link rel="stylesheet" type="text/css" href="{{ asset('css/fonts.css') }}" />
		{% stylesheets filter="lessphp" output="css/bootstrap.css"
			"less/bootstrap/bootstrap.less"
		%}
			<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
		{% endstylesheets %}
		{% stylesheets filter="scssphp" output="css/font-awesome.css"
			"scss/font-awesome/font-awesome.scss"
		%}
			<link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
		{% endstylesheets %}
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		<div class="container-fluid">
			{% block body %}{% endblock %}
			{% block fos_user_content %}{% endblock %}
		</div>
		{% javascripts filter="uglifyjs2" output="js/bootstrap.js"
			"js/bootstrap/*.js"
		%}
			<script src="{{ asset_url }}"></script>
		{% endjavascripts %}
		{% block javascripts %}{% endblock %}
	</body>
</html>
